<Window x:Class="SimpleOutline.Views.DocumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleOutline.Views"
        xmlns:models="clr-namespace:SimpleOutline.Models"
        xmlns:localValueConverters="clr-namespace:SimpleOutline.ValueConverters"
        mc:Ignorable="d"
        Title="Simple Outline 1.0" Height="450" Width="800">
    <DockPanel>
        <Menu Name="mainMenu" DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Command="{Binding NewDocumentCommand}"/>
                <Separator/>
                <MenuItem Header="_Open" Command="{Binding OpenDocumentCommand}"/>
                <MenuItem Header="_Save" Command="{Binding SaveDocumentCommand}"/>
                <MenuItem Header="Save As" Command="{Binding SaveDocumentAsCommand}"/>
                <Separator/>
                <MenuItem Header="_Print"/>
                <Separator/>
                <MenuItem Header="E_xit"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="Undo" Command="{Binding Path=UndoCommand}"/>
            </MenuItem>
            <MenuItem Header="_Item">
                <MenuItem Header="Insert" Command="{Binding Path=InsertItemCommand}"/>
            </MenuItem>
            <MenuItem Header="_Help"/>
        </Menu>
        <TreeView Name="outlineTreeView" ItemsSource="{Binding Path=Document.Items}" SelectedItemChanged="outlineTreeView_SelectedItemChanged">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type models:OutlineItem}" ItemsSource="{Binding Items}">
                    <TextBlock Text="{Binding Path=Name}"></TextBlock>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </DockPanel>
</Window>
